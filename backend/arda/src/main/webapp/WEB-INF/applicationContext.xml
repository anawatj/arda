<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd 
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-4.0.xsd">
	
	<context:component-scan base-package="com.konkow.arda.web.api"></context:component-scan>
	<bean id="newsRepository" class="com.konkow.arda.repository.impl.NewsRepository"></bean>
	<bean id="productRepository" class="com.konkow.arda.repository.impl.ProductRepository"></bean>
	<bean id="archievementRepository" class="com.konkow.arda.repository.impl.ArchievementRepository"></bean>
</beans>